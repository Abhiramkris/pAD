        <th>Order ID</th>
        <th>Payment ID</th>
        <th>Amount</th>
        <th>Status</th>
        <th>Created At</th>
      </tr>
    </thead>
    <tbody>
      <% payments.forEach(payment => { %>
        <tr>
          <td><%= payment.order_id %></td>
          <td><%= payment.payment_id || 'N/A' %></td>
          <td><%= payment.amount %></td>
          <td><%= payment.status %></td>
          <td><%= payment.created_at %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>

  <h2>Recent Logs</h2>
  <table border="1">
    <thead>
      <tr>
        <th>Type</th>
        <th>Message</th>
        <th>Created At</th>
      </tr>
    </thead>
    <tbody>
      <% logs.forEach(log => { %>
        <tr>
          <td><%= log.type %></td>
          <td><%= log.message %></td>
          <td><%= log.created_at %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  
</body>
</html>
