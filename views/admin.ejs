<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Panel</title>
</head>
<body>
  <h1>Admin Panel</h1>
  
  <p>Current Pad Count: <%= padCount %></p>
  <p>Current Payment Status: <%= paymentStatus %></p>
  <p>Dispensing: <%= dispensing ? 'Yes' : 'No' %></p>

  <h3>Reset Options</h3>
  
  <button id="resetPadCountBtn">Reset Pad Count</button>
  <button id="resetPaymentStatusBtn">Reset Payment Status</button>
  <button id="resetDispensingBtn">Reset Dispensing Status</button>

  <script>
    // Reset Pad Count Button
    document.getElementById('resetPadCountBtn').addEventListener('click', () => {
      fetch('/reset-pad-count', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
      })
      .then(response => response.json())
      .then(data => {
        alert('Pad Count Reset Successful');
        location.reload(); // Reload the page to update the values
      })
      .catch(error => console.error('Error resetting pad count:', error));
    });

    // Reset Payment Status Button
    document.getElementById('resetPaymentStatusBtn').addEventListener('click', () => {
      fetch('/reset-payment-status', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
      })
      .then(response => response.json())
      .then(data => {
        alert('Payment Status Reset Successful');
        location.reload(); // Reload the page to update the values
      })
      .catch(error => console.error('Error resetting payment status:', error));
    });

    // Reset Dispensing Button
    document.getElementById('resetDispensingBtn').addEventListener('click', () => {
      fetch('/reset-dispensing', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
      })
      .then(response => response.json())
      .then(data => {
        alert('Dispensing Status Reset Successful');
        location.reload(); // Reload the page to update the values
      })
      .catch(error => console.error('Error resetting dispensing status:', error));
    });
  </script>
</body>
</html>
